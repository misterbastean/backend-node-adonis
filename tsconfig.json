{
  "extends": "adonis-preset-ts/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
      "Tests/*": ["./tests/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/lucid",
      "@japa/preset-adonis/build/adonis-typings"
    ]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build"]
}
